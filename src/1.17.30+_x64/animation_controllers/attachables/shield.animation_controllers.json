{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.shield.wield": {
      "initial_state": "first_person",
      "states": {
        "first_person": {
          "animations": [
            { "wield_main_hand_first_person": "c.item_slot == 'main_hand'" },
            { "wield_off_hand_first_person": "c.item_slot == 'off_hand'" },
            // when equipped with 2 shields, bedrock uses the offhand one instead of the mainhand one, unlike java
            { "wield_main_hand_first_person_block": "q.is_sneaking && q.get_equipped_item_name(1) != 'shield' && c.item_slot == 'main_hand'" },
            { "wield_off_hand_first_person_block": "q.is_sneaking && q.get_equipped_item_name(1) == 'shield' && c.item_slot == 'off_hand'" }
          ],
          "transitions": [
            { "third_person": "!c.is_first_person" }
          ]
        },
        "third_person": {
          "animations": [ "wield_third_person" ],
          "transitions": [
            { "first_person": "c.is_first_person" }
          ]
        }
      }
    },
    "controller.animation.shield.block_time": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "start_block_time": "q.is_sneaking" }
          ]
        },
        "start_block_time": {
          "on_entry": [
            "v.block_time_start = q.life_time;"
          ],
          "transitions": [
            { "default": "v.block_time = q.life_time - v.block_time_start; return !q.is_sneaking;" }
          ],
          "on_exit": [
            "v.block_time = 0.0;"
          ]
        }
      }
    }
  }
}