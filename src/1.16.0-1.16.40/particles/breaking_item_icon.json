{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:breaking_item_icon",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "atlas.items"
      }
    },
    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": 2.4 // 1
      },
      "minecraft:emitter_lifetime_once": {
        "active_time": 0
      },
      "minecraft:emitter_shape_point": {
        "offset": [
          // v.emitter_radius is 0.25 in vanilla
          // but I dont know what servers do with this so best to leave it as a variable
          "math.random(-variable.emitter_radius, variable.emitter_radius) * 0.5",
          // 0 is mHeightOffset - aka at mouth level in vanilla
          // mHeightOffset seems to be set by the server
          -0.6,
          "math.random(-variable.emitter_radius, variable.emitter_radius) * 0.5"
        ],
        "direction": [
          // only way to make the particles more visible in front of player is to increase x and z randomness
          // default origin is center of head
          // no access to player x and y rot so cant do any trig math to sommon along look vector
          "Math.Random(-1.0, 1.0)",
          "Math.Random(2.0, 4.0)",
          "Math.Random(-1.0, 1.0)"
        ]
      },
      "minecraft:particle_initial_speed": "Math.random(2, 5)",
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "0.4f / (Math.random(0.25, 1.0) * 0.9f + 0.1f)"
      },
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [ 0, -9.8, 0 ],
        "linear_drag_coefficient": 0.5
      },
      "minecraft:particle_motion_collision": {
        "coefficient_of_restitution": 0.1,
        "collision_drag": 5,
        "collision_radius": 0.1
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          // v.size_modifier is 2/3 in vanilla, but again,
          // I dont know what servers do with this so best to leave it as a variable
          "(variable.particle_random_1 * 0.12 + 0.04) * variable.size_modifier",
          "(variable.particle_random_1 * 0.12 + 0.04) * variable.size_modifier"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 1,
          "texture_height": 1,
          "uv": [
            "variable.EmitterTextureCoord.u + (variable.EmitterTextureSize.u / 4) * (variable.particle_random_1 * 3)",
            "variable.EmitterTextureCoord.v + (variable.EmitterTextureSize.v / 4) * (variable.particle_random_2 * 3)"
          ],
          "uv_size": [
            "variable.EmitterTextureSize.u / 4",
            "variable.EmitterTextureSize.v / 4"
          ]
        }
      },
      "minecraft:particle_appearance_lighting": {}
    }
  }
}