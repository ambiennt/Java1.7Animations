{
  "format_version": "1.8.0",
  "animations": {
    "animation.player.emit_hurt_particle": {
      "loop": false,
      "animation_length": 0.1,
      "particle_effects": {
        "0.0": {
          "effect": "hurt",
          "pre_effect_script": "variable.ambient_height_offset = -0.4;"
        }
      }
    },
    "animation.player.emit_hurt_particle_offset": {
      "loop": false,
      "animation_length": 0.1,
      "particle_effects": {
        "0.0": {
          "effect": "hurt",
          "pre_effect_script": "variable.ambient_height_offset = -1.2;"
        }
      }
    }
  }
}
// this particle is emitted from a dedicated animation as opposed
// to an animation controller because emitting particles directly
// from animation controllers has a slight delay