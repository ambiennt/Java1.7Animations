{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:breaking_item_icon",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "atlas.items"
      }
    },
    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": "variable.from_projectile = (variable.speed_modifier == 1); return variable.from_projectile ? 1.0 : 2.0;"
      },
      "minecraft:emitter_lifetime_once": {
        "active_time": 0
      },
      "minecraft:emitter_shape_point": {
        "offset": [
          // v.emitter_radius is 0.25 in vanilla
          // but I dont know what servers do with this so best to leave it as a variable
          "math.random(-variable.emitter_radius, variable.emitter_radius)",
          "variable.from_projectile ? math.random(-variable.emitter_radius, variable.emitter_radius) : math.random(-0.5, 0.0)",
          "math.random(-variable.emitter_radius, variable.emitter_radius)"
        ],
        "direction": [
          "math.random(-1.0, 1.0)",
          "variable.from_projectile ? math.random(0.0, 1.0) : math.random(0.0, 0.5)", // so the particles are less in-your-face
          "math.random(-1.0, 1.0)"
        ]
      },
      "minecraft:particle_initial_speed": "math.random(1, 4) * variable.speed_modifier",
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "0.2f / (math.random(0.0, 1.0) * 0.9f + 0.1f)"
      },
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [ 0, -9.8, 0 ],
        "linear_drag_coefficient": 0.5
      },
      /*"minecraft:particle_motion_collision": {
        "coefficient_of_restitution": 0.1,
        "collision_drag": 5,
        "collision_radius": 0.1
      },*/
      "minecraft:particle_appearance_billboard": {
        "size": [
          // v.size_modifier is 2/3 in vanilla, but again,
          // I dont know what servers do with this so best to leave it as a variable
          "temp.size_multiplier = (variable.from_projectile ? 0.05 : 0.1); temp.constant = (variable.from_projectile ? 0.04 : 0.05); return (variable.particle_random_1 * temp.size_multiplier + temp.constant) * variable.size_modifier;",
          "temp.size_multiplier = (variable.from_projectile ? 0.05 : 0.1); temp.constant = (variable.from_projectile ? 0.04 : 0.05); return (variable.particle_random_1 * temp.size_multiplier + temp.constant) * variable.size_modifier;"
        ],
        "facing_camera_mode": "rotate_xyz", // lookat_xyz
        "uv": {
          "texture_width": 1,
          "texture_height": 1,
          "uv": [
            "variable.EmitterTextureCoord.u + (variable.EmitterTextureSize.u / 4) * (variable.particle_random_1 * 3)",
            "variable.EmitterTextureCoord.v + (variable.EmitterTextureSize.v / 4) * (variable.particle_random_2 * 3)"
          ],
          "uv_size": [
            "variable.EmitterTextureSize.u / 4",
            "variable.EmitterTextureSize.v / 4"
          ]
        }
      },
      "minecraft:particle_appearance_lighting": {}
    }
  }
}