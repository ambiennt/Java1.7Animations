{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "minecraft:chainmail_chestplate.player",
      "item": { "minecraft:chainmail_chestplate": "q.is_owner_identifier_any('minecraft:player')" },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "default": "textures/models/armor/chain_1",
        "enchanted": "textures/misc/enchanted_actor_glint"
      },
      "geometry": {
        "default": "geometry.player.armor.chestplate",
        "default_custom": "geometry.player_armor_custom"
      },
      "scripts": {
        "parent_setup": "v.chest_layer_visible = 0.0;"
      },
      "render_controllers": [
        { "controller.render.armor": "q.is_emoting" },
        { "controller.render.armor.chestplate": "!q.is_emoting" }
      ]
    }
  }
}
